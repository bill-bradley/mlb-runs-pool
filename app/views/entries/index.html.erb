<div class="container">
  <h2>My pool entries</h2>
  <hr/>
  <% if flash[:notice] %>

      <div class="alert alert-info" role="alert">
        <%= flash[:notice] %>
      </div>

  <% end %>

  <% if @entries.any? %>

      <table class="table table-striped">
        <tr>
          <th>Received</th>
          <th>Team Assignment</th>
          <th>Entry Fee Status</th>
        </tr>
        <% @entries.each do |entry| %>
            <tr>
              <td><%= entry.created_at.strftime('%D %r') %></td>
              <td><%= entry.team ? entry.team.name : 'Pending' %></td>
              <td><%= entry.paid_at ? 'Paid' : 'Not Paid' %></td>
            </tr>
        <% end %>
      </table>

      <% if @registerable %>

          <ul>
            <li>Teams will be randomly assigned on the first day of the MLB season (April 5)</li>
          </ul>

      <% end %>

  <% else %>

    <p>
      You don't have any entries.

      <% if @registerable %>
          Please buy one using the form below.
      <% end %>

    </p>

  <% end %>

  <h2>Buy entries</h2>
  <hr/>
  <% if @registerable %>

      <%= form_tag({action: 'buy'}, {method: :post, id: 'buy_entries'}) do %>
        <p>
          <%= label_tag 'quantity', 'Quantity (max 5)' %>: <%= text_field_tag 'quantity', nil, autofocus: true, value: '1' %>&nbsp;&nbsp;<b>Cost</b>: <span id="cost">$10</span>&nbsp;
          <input type="submit" class="btn btn-primary" value="Buy" id="buy"/>
        </p>
      <% end %>

  <% else %>

    <p>Entries are closed because the MLB season is underway.</p>

  <% end %>
</div>